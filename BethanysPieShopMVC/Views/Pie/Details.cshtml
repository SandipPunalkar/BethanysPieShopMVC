@model Pie

@{
    ViewData["Title"] = "Details";
}

<div>
    <img src="@Model.ImageUrl" alt="@Model.Name" />
    <div class="figure-caption">
        <h3>@Model.Price</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
    </div>
</div>